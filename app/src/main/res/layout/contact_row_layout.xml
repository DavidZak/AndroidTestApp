<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="5dp">

    <TextView
        android:id="@+id/imageViewContactImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/image_drawable_view"
        android:text="D"
        android:gravity="center"
        android:textColor="@color/colorTextFirst"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/imageViewContactImage"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/textViewContactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageViewDialogueImage"
            android:text="David Zakharyan"
            android:layout_gravity="top"
            android:textColor="@color/colorTextFirst"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textViewContactMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textViewDialogueName"
            android:layout_alignParentRight="true"
            android:text="11:23"
            android:textColor="@color/colorTextSecond"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</RelativeLayout>