<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="4dp"
            android:padding="8dp"
            android:background="@drawable/side_nav_bar">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/blogImageViewContactImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_launcher"
                android:gravity="center" />

            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_margin="8dp"
                android:singleLine="true"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_weight="1"
                android:textColor="@color/colorTextSecond" />

            <TextView
                android:id="@+id/textViewPostTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="11:33"
                android:singleLine="true"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_weight="1"
                android:textColor="@color/colorTextSecond" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/postImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_1"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewPostName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post title"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorTextSecond" />

            <TextView
                android:id="@+id/blogTextViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/colorTextSecond"
                android:text="Post description" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:background="@drawable/side_nav_bar"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/button_share_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_menu_share"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/text_view_post_likes_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="0"
                android:layout_gravity="center"
                android:gravity="right|center"
                android:textColor="@color/colorTextSecond"/>

            <ImageButton
                android:id="@+id/button_like_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_thumb_up_black_24dp"
                android:layout_marginLeft="8dp"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>