    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="64dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewContactImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_margin="2dp"
        android:padding="8dp"
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_bubble_view"
        android:textColor="@color/colorTextFirst"
        android:layout_toRightOf="@id/imageViewContactImage"
        tools:text="Messaghfgjfgjfgjhgjghjghddsfgdsgdsfdsdfsfdsfdsfdsfdsfdsadsadadsadsadsadasdsadsa"
